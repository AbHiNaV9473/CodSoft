# CodSoft
import java.util.Scanner;
import java.util.Random;

public class NumberGuessingGame {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        int lowestBound = 1;
        int highestBound = 200;
        int secretNumber = random.nextInt(highestBound - lowestBound + 1) + lowestBound;
        int maxAttempts = 5; 
        int attempts = 0;
        boolean hasGuessedCorrectly = false;

        System.out.println("Welcome to the Number Guessing Game!");
        System.out.println("I have chosen a number between " + lowestBound + " and " + highestBound + ".");
        System.out.println("You have " + maxAttempts + " attempts to guess it.");

        while (attempts < maxAttempts && !hasGuessedCorrectly) {
            System.out.print("Enter your guess: ");
            int guess = scanner.nextInt();
            attempts++;

            if (guess < lowestBound || guess > highestBound) {
                System.out.println("Your guess is out of the valid range. Please guess between " + lowestBound + " and " + highestBound + ".");
            } else if (guess == secretNumber) {
                System.out.println("Congratulations! You guessed the number " + secretNumber + " in " + attempts + " attempts.");
                hasGuessedCorrectly = true;
            } else if (guess < secretNumber) {
                System.out.println("Too low! Try again.");
            } else { // guess > secretNumber
                System.out.println("Too high! Try again.");
            }
        }

        if (!hasGuessedCorrectly) {
            System.out.println("You ran out of attempts. The secret number was: " + secretNumber);
        }

        scanner.close();
    }
}
